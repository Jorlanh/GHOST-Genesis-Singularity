{
  "name": "ghost-genesis-singularity",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "GHOST SYSTEM: GENESIS SINGULARITY - Tactical Neural Interface",
  "author": "GHOST COMMAND",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postinstall": "node -e \"const fs=require('fs'); if(!fs.existsSync('./resources')) fs.mkdirSync('./resources'); if(!fs.existsSync('./resources/nircmd.exe')) console.warn('GHOST >> AVISO: nircmd.exe ausente em ./resources. Baixe-o para controle de hardware.')\""
  },
  "dependencies": {
    "@capacitor/core": "^8.1.0",
    "@emotion/is-prop-valid": "^1.4.0",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.21",
    "axios": "^1.13.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/ios": "^8.1.0",
    "@types/dom-speech-recognition": "^0.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.18",
    "electron": "^30.0.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.ghost.genesis",
    "productName": "Ghost Genesis Singularity",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "resources/nircmd.exe",
        "to": "nircmd.exe"
      }
    ],
    "win": {
      "target": "portable",
      "requestedExecutionLevel": "requireAdministrator"
    }
  }
}